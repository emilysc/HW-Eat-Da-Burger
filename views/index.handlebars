<h1>Eat Da Burger!</h1>
<div class="burgers-container">
    <div>
        <h2>burgers to be devoured</h2>

        <ul>
            {{#each burgers}} {{#unless devoured}}
            <li>{{burger_name}}
                <button class="devourButton" type="button" data-id="{{id}}">Devour</button>
            </li>

            {{/unless}} {{/each}}
        </ul>
    </div>
    <div>
        <h2>devoured burgers</h2>

        <ul>
            {{#each burgers}} {{#if devoured}}
            <li>{{burger_name}}</li>
            {{/if}} {{/each}}
        </ul>
    </div>
</div>

<h2>Add a Burger</h2>
<form id="createBurger" class="create-form">
    <div class="form-group">
        <label for="newBurgerName">Burger Name:</label>
        <input type="text" id="newBurgerName" name="newBurgerName">
    </div>

    <button type="submit">Add burger</button>
</form>